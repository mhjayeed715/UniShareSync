                              <TextArea fx:id="updateProjectDescriptionArea" prefHeight="80.0" promptText="New Description" styleClass="form-input" wrapText="true" />
                           </VBox>
                           
                           <TableView fx:id="projectsTable" prefHeight="250.0" styleClass="table">
